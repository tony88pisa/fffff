# Guardian Trading System - Environment Variables Template
# Copia questo file in .env e configura le tue API keys e impostazioni
# IMPORTANTE: Non committare mai il file .env nel repository!

# =============================================================================
# CONFIGURAZIONE SISTEMA
# =============================================================================

# Ambiente di esecuzione (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# OLLAMA E MODELLI LLM
# =============================================================================

# URL del server Ollama
OLLAMA_BASE_URL=http://localhost:11434

# Modelli LLM per il sistema Guardian
# Modello primario per analisi complesse (DeepSeek-R1-Distill-Qwen-14B)
PRIMARY_LLM_MODEL=deepseek-r1-distill-qwen-14b:q4_k_m

# Modello secondario per analisi leggere (DeepSeek-R1-7B)
SECONDARY_LLM_MODEL=deepseek-r1:7b

# Timeout per le richieste LLM (secondi)
LLM_TIMEOUT=120

# Temperatura per la generazione (0.0-1.0)
LLM_TEMPERATURE=0.3

# =============================================================================
# DATABASE E STORAGE
# =============================================================================

# Weaviate Vector Database
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_TIMEOUT=30

# PostgreSQL Database (opzionale)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=guardian_trading
POSTGRES_USER=guardian_user
POSTGRES_PASSWORD=guardian_password_2025

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# SQLite Database (fallback)
SQLITE_DB_PATH=data/guardian_trading.db

# =============================================================================
# API KEYS PER DATI DI MERCATO
# =============================================================================

# Alpha Vantage (https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=YOUR_ALPHA_VANTAGE_API_KEY_HERE

# Polygon.io (https://polygon.io/)
POLYGON_API_KEY=YOUR_POLYGON_API_KEY_HERE

# IEX Cloud (https://iexcloud.io/)
IEX_CLOUD_API_KEY=YOUR_IEX_CLOUD_API_KEY_HERE
IEX_CLOUD_SECRET_KEY=YOUR_IEX_CLOUD_SECRET_KEY_HERE

# Binance API (https://www.binance.com/en/support/faq/360002502072)
BINANCE_API_KEY=YOUR_BINANCE_API_KEY_HERE
BINANCE_SECRET_KEY=YOUR_BINANCE_SECRET_KEY_HERE
BINANCE_TESTNET=true

# Yahoo Finance (nessuna API key richiesta)
# Utilizzato come fonte di backup gratuita

# =============================================================================
# API KEYS PER LLM ESTERNI (OPZIONALI)
# =============================================================================

# OpenAI API (per embedding e modelli esterni)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_ORG_ID=YOUR_OPENAI_ORG_ID_HERE

# Cohere API (per embedding alternativi)
COHERE_API_KEY=YOUR_COHERE_API_KEY_HERE

# Hugging Face API (per modelli open source)
HUGGINGFACE_API_KEY=YOUR_HUGGINGFACE_API_KEY_HERE

# Anthropic Claude API (opzionale)
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# =============================================================================
# CONFIGURAZIONE TRADING
# =============================================================================

# Modalità trading (paper/live)
TRADING_MODE=paper

# Capitale iniziale per paper trading
INITIAL_CAPITAL=100000.0

# Commissioni di trading (percentuale)
COMMISSION_RATE=0.001

# Fuso orario per il trading
TRADING_TIMEZONE=US/Eastern

# Orari di trading
TRADING_START_TIME=09:30
TRADING_END_TIME=16:00

# =============================================================================
# CONFIGURAZIONE RISK MANAGEMENT
# =============================================================================

# Perdita massima giornaliera (USD)
MAX_DAILY_LOSS=2000.0

# Drawdown massimo (percentuale)
MAX_DRAWDOWN_PERCENT=10.0

# Dimensione massima posizione (percentuale del portafoglio)
MAX_POSITION_SIZE_PERCENT=5.0

# Correlazione massima tra posizioni
MAX_CORRELATION=0.7

# Livello di confidenza VaR
VAR_CONFIDENCE_LEVEL=0.95

# Richiedi stop loss obbligatorio
REQUIRE_STOP_LOSS=true

# =============================================================================
# CONFIGURAZIONE STRATEGIE
# =============================================================================

# Simboli da monitorare (separati da virgola)
WATCHLIST_SYMBOLS=AAPL,GOOGL,MSFT,TSLA,AMZN,NVDA,META,NFLX

# Timeframe principale per le analisi
PRIMARY_TIMEFRAME=1h

# Numero massimo di trade al giorno
MAX_TRADES_PER_DAY=20

# Confidenza minima per eseguire un trade
MIN_TRADE_CONFIDENCE=0.6

# =============================================================================
# CONFIGURAZIONE MONITORING E NOTIFICHE
# =============================================================================

# Grafana Dashboard
GRAFANA_PASSWORD=admin123
GRAFANA_URL=http://localhost:3000

# Prometheus Metrics
PROMETHEUS_URL=http://localhost:9090

# Email Notifications (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=guardian-trading@yourdomain.com
SMTP_TO_EMAIL=trader@yourdomain.com

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#trading-alerts

# Discord Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Telegram Notifications
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# =============================================================================
# CONFIGURAZIONE PERFORMANCE
# =============================================================================

# Numero massimo di richieste concorrenti
MAX_CONCURRENT_REQUESTS=10

# Timeout per le richieste HTTP (secondi)
HTTP_TIMEOUT=30

# Dimensione cache in memoria (MB)
CACHE_SIZE_MB=100

# Intervallo garbage collection (minuti)
GC_INTERVAL_MINUTES=60

# =============================================================================
# CONFIGURAZIONE SICUREZZA
# =============================================================================

# Chiave segreta per JWT tokens
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Durata token JWT (ore)
JWT_EXPIRATION_HOURS=24

# Salt per hashing password
PASSWORD_SALT=your-password-salt-change-this

# Abilita HTTPS
ENABLE_HTTPS=false

# Percorso certificato SSL
SSL_CERT_PATH=config/ssl/cert.pem
SSL_KEY_PATH=config/ssl/key.pem

# =============================================================================
# CONFIGURAZIONE BACKUP
# =============================================================================

# Abilita backup automatico
ENABLE_BACKUP=true

# Intervallo backup (ore)
BACKUP_INTERVAL_HOURS=24

# Percorso backup
BACKUP_PATH=data/backups

# Numero massimo di backup da mantenere
MAX_BACKUP_COUNT=7

# =============================================================================
# CONFIGURAZIONE SVILUPPO
# =============================================================================

# Modalità mock per testing
MOCK_TRADING=true

# Velocità simulazione (1.0 = tempo reale)
SIMULATION_SPEED=1.0

# Percorso dati di test
TEST_DATA_PATH=data/test_data

# Abilita profiling delle performance
ENABLE_PROFILING=false

# Porta per il server di sviluppo
DEV_SERVER_PORT=8000

# =============================================================================
# CONFIGURAZIONE HARDWARE
# =============================================================================

# Utilizzo GPU per calcoli (true/false)
USE_GPU=true

# Device CUDA (0, 1, 2, etc. o 'cpu')
CUDA_DEVICE=0

# Numero di worker per processamento parallelo
NUM_WORKERS=4

# Limite memoria per processi (GB)
MEMORY_LIMIT_GB=12

# =============================================================================
# FINE CONFIGURAZIONE
# =============================================================================

# NOTA: Dopo aver configurato questo file:
# 1. Rinomina questo file da .env.template a .env
# 2. Configura tutte le API keys necessarie
# 3. Assicurati che .env sia nel .gitignore
# 4. Non condividere mai le tue API keys!